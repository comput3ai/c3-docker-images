# Define the version as a build argument
ARG OLLAMA_VERSION=0.6.3

# Base downloader stage with common setup
FROM ollama/ollama:${OLLAMA_VERSION} AS base-downloader
COPY <<EOF /init-models.sh
#!/bin/bash
set -e

# Get model params
original_model=\$1
final_name=\$2

# Start ollama in the background
ollama serve &
OLLAMA_PID=\$!
sleep 10

# Download and rename model
echo "Downloading \$final_name ..."
ollama pull \$original_model > /dev/null 2>&1 && \
ollama cp \$original_model \$final_name && \
ollama rm \$original_model

# Cleanup
kill \$OLLAMA_PID
sleep 5
EOF
RUN chmod +x /init-models.sh

# Separate stage for each model
FROM base-downloader AS llama-70b-downloader
RUN /init-models.sh "llama3.3:70b-instruct-q4_K_M" "llama3:70b"

FROM base-downloader AS hermes-70b-downloader
RUN /init-models.sh "hermes3:70b-llama3.1-q4_K_M" "hermes3:70b"

FROM base-downloader AS deepseek-70b-downloader
RUN /init-models.sh "deepseek-r1:70b-llama-distill-q4_K_M" "deepseek-r1:70b"

FROM base-downloader AS qwen2.5-coder-32b-downloader
RUN /init-models.sh "qwen2.5-coder:32b-instruct-q8_0" "qwen2.5-coder:32b"

FROM base-downloader AS qwq-32b-downloader
RUN /init-models.sh "qwq:32b-q8_0" "qwq:32b"

FROM base-downloader AS gemma3-27b-downloader
RUN /init-models.sh "gemma3:27b" "gemma3:27b"

FROM base-downloader AS llama-8b-downloader
RUN /init-models.sh "llama3.1:8b-instruct-q8_0" "llama3:8b"

FROM base-downloader AS hermes-8b-downloader
RUN /init-models.sh "hermes3:8b-llama3.1-q8_0" "hermes3:8b"

FROM base-downloader AS phi4-14b-downloader
RUN /init-models.sh "phi4:14b-q8_0" "phi4:14b"

FROM base-downloader AS deepseek-8b-downloader
RUN /init-models.sh "deepseek-r1:8b-llama-distill-q8_0" "deepseek-r1:8b"

FROM base-downloader AS llama-3b-downloader
RUN /init-models.sh "llama3.2:3b-instruct-q8_0" "llama3:3b"

FROM base-downloader AS hermes-3b-downloader
RUN /init-models.sh "hermes3:3b-llama3.2-q8_0" "hermes3:3b"

# Final image
FROM ollama/ollama:${OLLAMA_VERSION}

# Add non-root user
RUN groupadd -r -g 65532 ollama && \
    useradd -r -m -u 65532 -g ollama ollama

# Copy models from each builder
COPY --chown=ollama:ollama --from=llama-70b-downloader /root/.ollama/models /home/ollama/.ollama/models
COPY --chown=ollama:ollama --from=hermes-70b-downloader /root/.ollama/models /home/ollama/.ollama/models
COPY --chown=ollama:ollama --from=deepseek-70b-downloader /root/.ollama/models /home/ollama/.ollama/models
COPY --chown=ollama:ollama --from=qwen2.5-coder-32b-downloader /root/.ollama/models /home/ollama/.ollama/models
COPY --chown=ollama:ollama --from=qwq-32b-downloader /root/.ollama/models /home/ollama/.ollama/models
COPY --chown=ollama:ollama --from=gemma3-27b-downloader /root/.ollama/models /home/ollama/.ollama/models
COPY --chown=ollama:ollama --from=llama-8b-downloader /root/.ollama/models /home/ollama/.ollama/models
COPY --chown=ollama:ollama --from=hermes-8b-downloader /root/.ollama/models /home/ollama/.ollama/models
COPY --chown=ollama:ollama --from=phi4-14b-downloader /root/.ollama/models /home/ollama/.ollama/models
COPY --chown=ollama:ollama --from=deepseek-8b-downloader /root/.ollama/models /home/ollama/.ollama/models
COPY --chown=ollama:ollama --from=llama-3b-downloader /root/.ollama/models /home/ollama/.ollama/models
COPY --chown=ollama:ollama --from=hermes-3b-downloader /root/.ollama/models /home/ollama/.ollama/models

USER 65532:65532
